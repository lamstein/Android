<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="avcaliani.mydatabaseapp.MainActivity">

    <TextView
        android:id="@+id/main_tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"/>
    <EditText
        android:id="@+id/main_etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_tvUsername"/>
    <TextView
        android:id="@+id/main_tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="e-mail"
        android:layout_below="@id/main_etUsername"
        android:paddingTop="10dp"/>
    <EditText
        android:id="@+id/main_etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_tvEmail" />

    <LinearLayout
        android:id="@+id/main_llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/main_etEmail"
        android:padding="15dp">
        <ImageButton
            android:id="@+id/main_btnAdd"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_heigth"
            android:background="@drawable/add_64px"
            android:layout_marginRight="@dimen/button_distance_rigth"/>

        <ImageButton
            android:id="@+id/main_btnSearch"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_heigth"
            android:background="@drawable/search_64px"
            android:layout_marginRight="@dimen/button_distance_rigth"/>
        <ImageButton
            android:id="@+id/main_btnEdit"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_heigth"
            android:background="@drawable/edit_64px"
            android:layout_marginRight="@dimen/button_distance_rigth"/>
        <ImageButton
            android:id="@+id/main_btnDelete"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_heigth"
            android:background="@drawable/trash_64px" />
    </LinearLayout>

</RelativeLayout>
