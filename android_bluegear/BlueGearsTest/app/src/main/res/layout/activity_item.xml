<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Controller.ItemActivity">

    <ImageView
        android:id="@+id/item_ivIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/money_128px"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/item_tvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/item_ivIcon"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/item_tvItemDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decription"
        android:textSize="20sp"
        android:layout_below="@id/item_tvItem"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/item_tvTimeAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_added"
        android:textStyle="italic"
        android:textSize="10sp"
        android:layout_below="@id/item_tvItemDesc"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
