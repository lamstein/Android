<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="avcaliani.listviewapp.UserActivity">

    <ImageView
        android:id="@+id/user_ivIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user_128px"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/user_tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/user_ivIcon"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_tvTimeAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_added"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_below="@id/user_tvUser"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
